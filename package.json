{
  "name": "email-securely-app",
  "description": "Unofficial desktop app for E2E encrypted email providers",
  "version": "1.4.0",
  "author": "Vladimir Yakovlev <desktop-app@protonmail.ch>",
  "license": "MIT",
  "homepage": "https://github.com/vladimiry/email-securely-app",
  "repository": "git@github.com:vladimiry/email-securely-app.git",
  "bugs": {
    "url": "https://github.com/vladimiry/email-securely-app/issues"
  },
  "main": "./app/electron-main.js",
  "scripts": {
    "app:dist": "npm-run-all security-check lint test:electron-main test:web clean:app build assets test:e2e",
    "build": "npm-run-all build:electron-main build:electron-preload build:web",
    "build:dev": "cross-env NODE_ENV=development npm-run-all build",
    "build:electron-main": "webpack --config ./src/webpack/electron-main.ts",
    "build:electron-main:dev": "cross-env NODE_ENV=development npm-run-all build:electron-main",
    "build:electron-main:watch": "webpack --config ./src/webpack/electron-main.ts -w",
    "build:electron-main:watch:dev": "cross-env NODE_ENV=development webpack --config ./src/webpack/electron-main.ts -w",
    "build:electron-preload": "webpack --config ./src/webpack/electron-preload.ts",
    "build:electron-preload:dev": "cross-env NODE_ENV=development npm-run-all build:electron-preload",
    "build:electron-preload:watch": "webpack --config ./src/webpack/electron-preload.ts -w",
    "build:electron-preload:watch:dev": "cross-env NODE_ENV=development webpack --config ./src/webpack/electron-preload.ts -w",
    "build:web": "webpack --config ./src/webpack/web.ts",
    "build:web:dev": "cross-env NODE_ENV=development npm-run-all build:web",
    "build:web:watch": "webpack --config ./src/webpack/web.ts -w",
    "build:web:watch:dev": "cross-env NODE_ENV=development webpack --config ./src/webpack/web.ts -w",
    "build:web:server:dev": "cross-env NODE_ENV=development webpack-dev-server --config ./src/webpack/web.ts",
    "clean": "npm-run-all clean:app clean:app-dev",
    "clean:app": "rimraf ./app/",
    "clean:app-dev": "rimraf ./app-dev/",
    "assets": "npm-run-all assets:copy assets:download",
    "assets:dev": "npm-run-all assets:copy:dev assets:download:dev",
    "assets:copy": "cpx \"./src/assets/dist/**/*\" ./app/assets",
    "assets:copy:dev": "cpx \"./src/assets/dist/**/*\" ./app-dev/assets",
    "assets:download": "ts-node ./scripts/download-numbers-font.ts ./app/assets/numbers.ttf",
    "assets:download:dev": "ts-node ./scripts/download-numbers-font.ts ./app-dev/assets/numbers.ttf",
    "electron-builder:install-app-deps": "electron-builder install-app-deps",
    "electron-builder:dir": "electron-builder --dir",
    "electron-builder:dist": "electron-builder",
    "electron-builder:dist:linux": "electron-builder --linux AppImage deb freebsd pacman rpm snap",
    "electron-builder:dist:linux:appimage": "electron-builder --linux AppImage",
    "electron-builder:dist:linux:deb": "electron-builder --linux deb",
    "electron-builder:dist:linux:freebsd": "electron-builder --linux freebsd",
    "electron-builder:dist:linux:pacman": "electron-builder --linux pacman",
    "electron-builder:dist:linux:rpm": "electron-builder --linux rpm",
    "electron-builder:dist:linux:snap": "electron-builder --linux snap",
    "electron-builder:publish:x64": "electron-builder --publish onTagOrDraft --x64",
    "electron-builder:publish:x64:linux": "electron-builder --publish onTagOrDraft --x64 --linux AppImage deb freebsd pacman rpm snap",
    "lint": "npm-run-all lint:sass lint:code",
    "lint:code": "npm-run-all lint:js lint:ts",
    "lint:js": "tslint \"./src/**/*.js\" \"./*.js\"",
    "lint:sass": "sass-lint -v -q -c ./sass-lint.yml",
    "lint:ts": "tslint -p ./tsconfig.json \"./src/**/*.ts\" \"./scripts/**/*.ts\" \"./src/**/*.js\"",
    "security-check": "nsp check --preprocessor yarn --reporter table",
    "start": "npm-run-all build:app start:electron-main",
    "start:electron": "electron ./app/electron-main.js",
    "start:electron:dev": "electron ./app-dev/electron-main.js",
    "test:e2e": "ava --verbose \"./src/e2e/**/*.{spec,test}.ts\"",
    "test:electron-main": "cross-env TS_NODE_PROJECT=./src/electron-main/tsconfig.json ava --verbose \"./src/electron-main/**/*.{spec,test}.ts\"",
    "test:web": "cross-env NODE_ENV=test karma start ./src/web/test/karma.conf.ts --single-run",
    "test:web:watch": "cross-env NODE_ENV=test karma start ./src/web/test/karma.conf.ts"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
