{
  "name": "protonmail-desktop-app",
  "description": "Unofficial ProtonMail Desktop App",
  "version": "0.1.0-alpha.4",
  "author": "Vladimir Yakovlev <desktop-app@protonmail.ch>",
  "license": "MIT",
  "homepage": "https://github.com/vladimiry/protonmail-desktop-app",
  "repository": "git@github.com:vladimiry/protonmail-desktop-app.git",
  "bugs": {
    "url": "https://github.com/vladimiry/protonmail-desktop-app/issues"
  },
  "main": "./app/electron/main/index.js",
  "scripts": {
    "postinstall": "npm-run-all postinstall:cross-os postinstall:install-app-deps",
    "postinstall:install-app-deps": "electron-builder install-app-deps",
    "postinstall:cross-os": "cross-os 7zip-bin",
    "electron-builder:dir": "electron-builder --dir",
    "electron-builder:dist": "electron-builder",
    "electron-builder:release": "electron-builder -p onTagOrDraft --x64",
    "dist": "npm-run-all app:build electron-builder:dist",
    "app:dist": "cross-env NODE_ENV=production npm-run-all lint test:electron:main app:clean app:compile app:assets test:e2e",
    "app:clean": "rimraf ./app/",
    "app:assets": "gulp copy:assets",
    "app:compile:production": "NODE_ENV=production npm-run-all electron:compile web:compile",
    "app:compile": "npm-run-all electron:compile web:compile",
    "app:start": "npm-run-all -p web:start electron:start:on-web-ready",
    "electron:start:on-web-ready": "cross-env npm-run-all web:start:wait-ready electron:start",
    "electron:start": "cross-env NODE_ENV=development npm-run-all -s electron:renderer:compile electron:main:compile -p electron:renderer:compile:watch electron:main:compile:watch electron:main:start",
    "electron:compile": "npm-run-all electron:renderer:compile electron:main:compile",
    "electron:main:compile": "webpack --config ./src/electron/main/webpack.config.js",
    "electron:main:compile:watch": "webpack --config ./src/electron/main/webpack.config.js -w",
    "electron:main:start": "cross-env NODE_ENV=development gulp start",
    "electron:renderer:compile": "webpack --config ./src/electron/renderer/webpack.config.js",
    "electron:renderer:compile:watch": "webpack --config ./src/electron/renderer/webpack.config.js -w",
    "web:start": "NODE_ENV=development cross-env webpack-dev-server --config ./src/web/webpack.config.js",
    "web:start:wait-ready": "wait-on http://localhost:3000",
    "web:compile": "cross-env webpack --config ./src/web/webpack.config.js",
    "lint": "tslint \"./src/**/*.ts\"",
    "test:e2e": "ava-ts --verbose \"./src/e2e/**/*.{spec,test}.ts\"",
    "test:electron:main": "ava-ts -p ./tsconfig.json --verbose \"./src/electron/main/**/*.{spec,test}.ts\""
  },
  "cross-os": {
    "7zip-bin": {
      "linux": "npm i --no-save 7zip-bin-linux",
      "darwin": "npm i --no-save 7zip-bin-mac",
      "win32": "npm i --no-save 7zip-bin-win"
    }
  },
  "pre-commit": [
    "lint"
  ],
  "ava": {
    "TODO ava 1": "get rid of ava-ts, run tests using ts-node as soon as ava gets *.ts file pattern allowed",
    "TODO ava 2": "ts-node/register is added as ava-ts doesn't work well with just tsconfig-paths/register added without explicit ts-node/register attaching",
    "require": [
      "ts-node/register",
      "tsconfig-paths/register",
      "source-map-support/register"
    ]
  },
  "dependencies": {
    "about-window": "1.8.0",
    "combine-errors": "3.0.3",
