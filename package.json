    "tsconfig-paths": "3.3.2",
    "tsconfig-paths-webpack-plugin": "3.1.3",
    "tslint": "5.10.0",
    "tslint-rules-bunch": "0.0.4",
    "typescript": "2.9.1",
    "url-loader": "1.0.1",
    "wait-on": "2.1.0",
    "webpack": "4.10.2",
