    "awesome-typescript-loader": "5.0.0",
    "bootstrap": "4.1.1",
    "cache-loader": "1.2.2",
    "circular-dependency-plugin": "5.0.2",
    "codelyzer": "4.3.0",
    "core-js": "2.5.7",
    "cross-env": "5.1.6",
    "cross-spawn": "6.0.5",
    "css-loader": "0.28.11",
    "cssnano": "3.10.0",
    "devtron": "1.4.0",
    "electron": "2.0.2",
    "electron-builder": "20.15.1",
    "electron-builder-squirrel-windows": "20.15.0",
    "electron-rebuild": "1.7.3",
    "exports-loader": "0.7.0",
    "extended-define-webpack-plugin": "0.1.3",
    "file-loader": "1.1.11",
    "font-awesome": "4.7.0",
    "gulp": "3.9.1",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "https://github.com/jantimon/html-webpack-plugin#webpack-4",
    "hydux-mutator": "0.1.11",
    "less-loader": "4.1.0",
    "mini-css-extract-plugin": "0.4.0",
    "mkdirp": "0.5.1",
    "ngx-bootstrap": "3.0.0",
    "node-sass": "4.9.0",
    "npm-run-all": "4.1.3",
    "nsp": "3.2.1",
    "nsp-preprocessor-yarn": "1.1.2",
    "otpauth": "3.2.1",
    "postcss-custom-properties": "7.0.0",
    "postcss-loader": "2.1.5",
    "postcss-url": "7.3.2",
    "pre-commit": "1.2.2",
    "ps-node": "0.1.6",
    "ps-tree": "1.1.0",
    "randomstring": "1.1.5",
    "raw-loader": "0.5.1",
    "resolve-url-loader": "2.3.0",
