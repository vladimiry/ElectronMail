{
  "rulesDirectory": [
    "./../../node_modules/tslint-rules-bunch/rules"
  ],
  "rules": {
    "no-import-zones": [
      true,
      {
        "verbose": false,
        "zones": [
          {
            "patterns": [
              {
                "target": "src/electron-main/**/*",
                "from": [
                  "src/**/*",
                  "!src/electron-main/**/*",
                  "!src/shared/**/*"
                ]
              }
            ]
          },
          {
            "patterns": [
              {
                "target": "src/electron-preload/**/*",
                "from": [
                  "electron",
                  "electron-log",
                  "src/**/*",
                  "!src/electron-preload/**/*",
                  "!src/shared/**/*",
                  "!src/shared-web/**/*"
                ]
              }
            ]
          },
          {
            "patterns": [
              {
                "target": [
                  "src/electron-preload/webview/**/*",
                  "!src/electron-preload/webview/lib/util.ts"
                ],
                "from": [
                  "src/shared/api/main"
                ]
              }
            ]
          },
          {
            "patterns": [
              {
                "target": "src/web/src/**/*",
                "from": [
                  "electron",
                  "electron-log",
                  "src/**/*",
                  "!src/web/src/**/*",
                  "!src/web/test/util",
                  "!src/shared/**/*",
                  "!src/shared-web/**/*"
                ]
              }
            ]
          },
          {
            "patterns": [
              {
                "target": [
                  "!src/electron-main/database/entity/**/*",
                  "!src/electron-main/database/validation.ts"
                ],
                "from": [
                  "src/electron-main/database/entity",
                  "src/electron-main/database/entity/**/*"
                ]
              }
            ]
          },
          {
            "patterns": [
              {
                "target": "src/**/*",
                "from": "package.json"
              }
            ]
          },
          {
            "patterns": [
              {
                "target": "src/**/*",
                "from": "keytar"
              }
            ]
          }
        ]
      }
    ]
  }
}
